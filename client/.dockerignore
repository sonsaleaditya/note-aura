# Ignore node_modules (dependencies are installed inside the container)
node_modules

# Ignore logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore build artifacts (they are created during the build process)
build
dist

# Ignore sensitive files
.env
.env.local
.env.development
.env.production

# Ignore editor and IDE-specific files
*.swp
*.swo
.vscode
.idea
*.iml

# Ignore system files
.DS_Store
Thumbs.db

# Ignore version control
.git
.gitignore

# Include Dockerfile
!Dockerfile

# Optional: If using Docker Compose, include it too
!docker-compose.yml
